@model IEnumerable<ServiceStatusApp.Models.Service>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Usług do wykonania</h2>
@if(Model.Any())
{



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Describe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key)
        </th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.StatusId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Describe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Key) 
        </td>
        <td>
            <a data-toggle="tooltip" data-placement="bottom" title="Wygeneruj nowy klucz" href="@Url.Action("ChangeKey", "Services", new { id = item.Id })" class="btn btn-warning"><i class="glyphicon glyphicon-sort"></i></a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddDate)
        </td>
        <td>
            <a href="@Url.Action("Complete", "Services", new { id = item.Id })" class="btn btn-success">Ukończ</a>
            <a href="@Url.Action("Delete", "Services", new { id = item.Id })" class="btn btn-danger">Usuń</a>
            <a href="@Url.Action("Edit", "Services", new { id = item.Id })" class="btn btn-warning">Edytuj</a>
        </td>
    </tr>
}

</table>
}
else
{
    <p>Nie znaleziono zadań</p>
}
<p>
    <a href="@Url.Action("Create", "Services")" class="btn btn-default">Stwórz</a>
</p>
@section Scripts {
    @Scripts.Render("~/bundles/bootstrapToolTip")
}